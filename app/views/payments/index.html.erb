

<h1>Listing payments</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Address1</th>
    <th>Address2</th>
    <th>City</th>
    <th>Country</th>
    <th>Email address</th>
    <th>Confirm email</th>
    <th>Card type</th>
    <th>Card number</th>
    <th>Expire date</th>
    <th>Cvc number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.first_name %></td>
    <td><%= payment.last_name %></td>
    <td><%= payment.address1 %></td>
    <td><%= payment.address2 %></td>
    <td><%= payment.city %></td>
    <td><%= payment.country %></td>
    <td><%= payment.email_address %></td>
    <td><%= payment.confirm_email %></td>
    <td><%= payment.card_type %></td>
    <td><%= payment.card_number %></td>
    <td><%= payment.expire_date %></td>
    <td><%= payment.cvc_number %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>



