

<h1>Login</h1>

<p id ="notice" ><%= notice %></p>

<p id ="alert"><%=  flash.now[:alert] %></p>


<%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :username %><br />
      <%= text_field_tag :username %>
    </div>

    <h2>Or</h2>

    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email %>
    </div>

    <div class="field">
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </div>


    <div class="actions">
      <%= submit_tag 'Login' %>
    </div>
<% end %>


